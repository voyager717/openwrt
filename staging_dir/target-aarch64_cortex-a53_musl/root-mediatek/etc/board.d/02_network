#!/bin/sh

. /lib/functions.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

mediatek_setup_interfaces()
{
	local board="$1"

	case $board in

        *mt7981-spim-snand-gsw-rfb-z8104ax)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6u@eth0" "5u@eth1"
                ;;
	*mt7981-spim-snand-rfb-z8105ax*)
		ucidef_set_interface_lan "lan5"
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" eth1
		;;
	*mt7981-spim-snand-rfb-z8106ax)
		ucidef_set_interface_lan "lan5"
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" eth1
		;;
	*mt7981-spim-snand-rfb-mofi6500)
		ucidef_set_interface_lan "lan5"
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" eth1
		;;
	*fpga*)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6u@eth0" "5u@eth1"
		;;
	*gsw*)
		ucidef_set_interfaces_lan_wan "eth0" "eth1"
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:lan" "6u@eth0"
		;;
	*2500wan-p5*)
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" wan
		;;

	*)
		ucidef_set_interfaces_lan_wan "lan1 lan2 lan3 lan4" eth1
		;;
	esac
}

mediatek_setup_macs()
{
	local board="$1"
	local part_name="Factory"
	local lan_mac=""
	local wan_mac=""
	local lan_mac_offset=""
	local wan_mac_offset=""

	case $board in
	*)
		lan_mac_offset="0x2A"
		wan_mac_offset="0x24"
		;;
	esac

	# 2023-08-23:zzk
	case $board in
	*emmc*)
		lan_mac=$(hexdump -C -s ${lan_mac_offset} /dev/mmcblk0p3 | sed -n "1p" | cut -c 11-27 |sed 's/\ /:/g')
        	wan_mac=$(hexdump -C -s ${wan_mac_offset} /dev/mmcblk0p3 | sed -n "1p" | cut -c 11-27 |sed 's/\ /:/g')
		;;
	*)
		lan_mac=$(mtd_get_mac_binary $part_name $lan_mac_offset)
		wan_mac=$(mtd_get_mac_binary $part_name $wan_mac_offset)
		;;
	esac
	echo "$lan_mac" > /tmp/lan_mac
        echo "$wan_mac" > /tmp/wan_mac

	case "$lan_mac" in
		00:00:00:00:00:00);;
		ff:ff:ff:ff:ff:ff);;
		*)
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" "$lan_mac"
	;;
	esac

	case "$wan_mac" in
		00:00:00:00:00:00);;
		ff:ff:ff:ff:ff:ff);;
		*)
		[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" "$wan_mac"
	;;
	esac
}

board_config_update
board=$(board_name)
mediatek_setup_interfaces $board
mediatek_setup_macs $board
board_config_flush

exit 0
