resolve_file_mode_id() {
	local var=$1 type=$2 name=$3 id

	case "$name" in
		root)
			id=0
		;;
		*[!0-9]*)
			id=$(sed -ne "s#^$type $name \\([0-9]\\+\\)\\b.*\$#\\1#p" "$TOPDIR/tmp/.packageusergroup" 2>/dev/null)
		;;
		*)
			id=$name
		;;
	esac

	export "$var=$id"

	[ -n "$id" ]
}

